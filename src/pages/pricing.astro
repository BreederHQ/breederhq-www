    <script>
      function calculateROI() {
        const animals = parseInt(document.getElementById('animals').value) || 5;
        const litters = parseInt(document.getElementById('litters').value) || 3;
        const hourlyValue = parseInt(document.getElementById('hourlyValue').value) || 50;

        // Determine plan based on animals
        let plan = 'Starter';
        let monthlyCost = 29;
        if (animals > 15) {
          plan = 'Professional';
          monthlyCost = 99;
        } else if (animals > 5) {
          plan = 'Breeder';
          monthlyCost = 59;
        }

        const annualCost = monthlyCost * 12;

        // Calculate time saved (increases with animals and litters)
        const baseTimeSaved = 3; // base hours per week
        const animalMultiplier = Math.floor(animals / 3) * 0.5;
        const litterMultiplier = Math.floor(litters / 2) * 0.5;
        const timeSaved = Math.round(baseTimeSaved + animalMultiplier + litterMultiplier);

        // Calculate annual time value
        const timeValue = timeSaved * hourlyValue * 52;

        // Calculate ROI
        const roi = Math.round(timeValue / annualCost);

        // Update DOM
        document.getElementById('recommendedPlan').textContent = plan;
        document.getElementById('annualCost').textContent = `$${annualCost.toLocaleString()}`;
        document.getElementById('timeSaved').textContent = `${timeSaved} hours`;
        document.getElementById('timeValue').textContent = `$${timeValue.toLocaleString()}`;
        document.getElementById('roi').textContent = `${roi}:1`;
      }

      // Add event listeners
      document.getElementById('animals').addEventListener('input', calculateROI);
      document.getElementById('litters').addEventListener('input', calculateROI);
      document.getElementById('hourlyValue').addEventListener('input', calculateROI);

      // Initial calculation
      calculateROI();
    </script>

