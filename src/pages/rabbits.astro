  <style>
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }

    .faq-item {
      border-bottom: 1px solid #e5e7eb;
      padding: 1.5rem 0;
    }

    .faq-question {
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      font-size: 1.25rem;
      font-weight: 600;
      list-style: none;
    }

    .faq-question::-webkit-details-marker {
      display: none;
    }

    .faq-icon {
      transition: transform 200ms ease;
      flex-shrink: 0;
      margin-left: 1rem;
    }

    details[open] .faq-icon {
      transform: rotate(180deg);
    }

    .faq-answer {
      padding-top: 1rem;
      color: #4b5563;
      line-height: 1.6;
    }

    .faq-answer p {
      font-size: 1.125rem;
    }
  </style>
