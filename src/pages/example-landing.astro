---
/**
 * Example Landing Page
 * Demonstrates how to use all the strategic advantage features
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import CTAButton from '../components/CTAButton.astro';
---

<BaseLayout
  title="Example Landing Page | BreederHQ"
  description="This is an example landing page showing how to use all tracking and analytics features."
  keywords={['breeding software', 'example', 'landing page']}
>
  <main class="container mx-auto px-4 py-16">
    <!-- Hero Section -->
    <section class="hero text-center mb-16">
      <h1 class="text-5xl font-bold mb-6">
        Transform Your Breeding Operation
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Stop using spreadsheets. Start using BreederHQ - the modern breeding management platform trusted by professional breeders worldwide.
      </p>

      <!-- CTA Buttons with automatic tracking -->
      <div class="flex gap-4 justify-center">
        <CTAButton
          href="https://app.breederhq.com/signup"
          text="Start Free Trial"
          location="hero-primary"
          variant="primary"
          size="lg"
          external={true}
        />
        <CTAButton
          href="#demo"
          text="Watch Demo"
          location="hero-secondary"
          variant="outline"
          size="lg"
        />
      </div>
    </section>

    <!-- Features Section -->
    <section class="features mb-16">
      <h2 class="text-3xl font-bold text-center mb-12">
        Everything You Need to Succeed
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="feature-card p-6 border rounded-lg">
          <h3 class="text-xl font-semibold mb-3">Animal Profiles</h3>
          <p class="text-gray-600 mb-4">
            Complete health records, pedigrees, and genetics tracking.
          </p>
          <CTAButton
            href="/features/animal-profiles"
            text="Learn More"
            location="features-animal-profiles"
            variant="outline"
            size="sm"
          />
        </div>

        <div class="feature-card p-6 border rounded-lg">
          <h3 class="text-xl font-semibold mb-3">Breeding Management</h3>
          <p class="text-gray-600 mb-4">
            Track cycles, heat dates, and breeding outcomes automatically.
          </p>
          <CTAButton
            href="/features/breeding"
            text="Learn More"
            location="features-breeding"
            variant="outline"
            size="sm"
          />
        </div>

        <div class="feature-card p-6 border rounded-lg">
          <h3 class="text-xl font-semibold mb-3">Client Portal</h3>
          <p class="text-gray-600 mb-4">
            Give buyers real-time updates and professional experience.
          </p>
          <CTAButton
            href="/features/client-portal"
            text="Learn More"
            location="features-client-portal"
            variant="outline"
            size="sm"
          />
        </div>
      </div>
    </section>

    <!-- Video Section (with tracking) -->
    <section id="demo" class="video-section mb-16 text-center">
      <h2 class="text-3xl font-bold mb-8">See BreederHQ in Action</h2>

      <div class="video-wrapper max-w-3xl mx-auto">
        <!-- Placeholder for video - replace with actual video -->
        <div
          class="demo-video bg-gray-200 aspect-video rounded-lg flex items-center justify-center cursor-pointer"
          data-video-name="product-demo"
        >
          <span class="text-2xl text-gray-500">▶️ Play Demo Video</span>
        </div>
      </div>
    </section>

    <!-- Social Proof Section -->
    <section class="social-proof mb-16 bg-gray-50 p-12 rounded-lg">
      <h2 class="text-3xl font-bold text-center mb-8">
        Trusted by Professional Breeders
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="testimonial text-center">
          <p class="text-gray-600 italic mb-4">
            "BreederHQ saved me 10 hours per week. I'll never go back to spreadsheets."
          </p>
          <p class="font-semibold">- Sarah M., Dog Breeder</p>
        </div>

        <div class="testimonial text-center">
          <p class="text-gray-600 italic mb-4">
            "The client portal is a game-changer. My buyers love the transparency."
          </p>
          <p class="font-semibold">- John D., Horse Breeder</p>
        </div>

        <div class="testimonial text-center">
          <p class="text-gray-600 italic mb-4">
            "Finally, all my breeding data in one place. Highly recommend!"
          </p>
          <p class="font-semibold">- Maria L., Cat Breeder</p>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-section max-w-2xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-center mb-4">
        Ready to Get Started?
      </h2>
      <p class="text-center text-gray-600 mb-8">
        Fill out the form below and we'll get you set up with a free trial.
      </p>

      <!-- Contact form with automatic lead capture, enrichment, and tracking -->
      <ContactForm
        formId="landing-contact-form"
        submitText="Start My Free Trial"
        source="example_landing_page"
      />
    </section>

    <!-- Footer CTA -->
    <section class="footer-cta text-center">
      <h2 class="text-2xl font-bold mb-4">
        Still Have Questions?
      </h2>
      <CTAButton
        href="/pricing"
        text="View Pricing"
        location="footer-cta"
        variant="primary"
        size="md"
      />
    </section>
  </main>
</BaseLayout>

<!-- Custom tracking for video -->
<script>
  import { trackVideoPlay } from '../lib/tracking';

  document.addEventListener('DOMContentLoaded', () => {
    const demoVideo = document.querySelector('.demo-video');

    if (demoVideo) {
      demoVideo.addEventListener('click', () => {
        const videoName = (demoVideo as HTMLElement).dataset.videoName || 'unknown';
        trackVideoPlay(videoName, 'landing-page');

        // Here you would actually play the video
        // For now, just log it
        console.log('Video play tracked:', videoName);
      });
    }
  });
</script>

<style>
  .container {
    max-width: 1200px;
  }

  .feature-card {
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .demo-video {
    transition: opacity 0.2s;
  }

  .demo-video:hover {
    opacity: 0.9;
  }
</style>
