---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Page Not Found - BreederHQ"
  description="The page you're looking for doesn't exist. Explore BreederHQ's breeding management software features or return to the homepage."
  noindex={true}
>
  <main>
    <section class="bg-gradient-to-b from-white to-gray-50 py-20 min-h-[60vh] flex items-center">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="text-8xl mb-6">404</div>

          <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl mb-6">
            Page Not Found
          </h1>

          <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
            Sorry, we couldn't find the page you're looking for. It may have been moved or no longer exists.
          </p>

          <div class="flex flex-wrap justify-center gap-4 mb-12">
            <a
              href="/"
              class="bg-primary text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90"
            >
              Go to Homepage
            </a>
            <a
              href="/dogs"
              class="bg-white text-primary border border-primary px-6 py-3 rounded-lg font-semibold hover:bg-gray-50"
            >
              Explore Features
            </a>
          </div>

          <div class="text-left max-w-md mx-auto">
            <p class="text-gray-600 mb-4 text-center">Or check out these popular pages:</p>
            <ul class="space-y-2 text-center">
              <li><a href="/dogs" class="text-primary hover:underline">Dog Breeding Software</a></li>
              <li><a href="/cats" class="text-primary hover:underline">Cat Breeding Software</a></li>
              <li><a href="/horses" class="text-primary hover:underline">Horse Breeding Software</a></li>
              <li><a href="/workflows/pedigrees" class="text-primary hover:underline">Pedigree Management</a></li>
              <li><a href="/workflows/genetics-and-health-testing" class="text-primary hover:underline">Genetics & Health Testing</a></li>
              <li><a href="/buyers/evaluate-breeders" class="text-primary hover:underline">How to Evaluate Breeders</a></li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
