---
// Header navigation component
const { hideLogo = false } = Astro.props;
---

<header class="border-b border-gray-200 bg-white">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      {!hideLogo && (
        <div class="flex items-center">
          <a href="/" class="flex items-center">
            <img src="/logo.png" alt="BreederHQ" class="h-16 w-auto" />
          </a>
        </div>
      )}

      <!-- Navigation Links -->
      <div class="hidden md:flex md:items-center md:space-x-8">
        <a href="/about" class="text-gray-700 hover:text-primary font-medium">About</a>
        <div class="relative group">
          <button class="text-gray-700 hover:text-primary font-medium">
            Species ▾
          </button>
          <div class="absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-1">
              <a href="/dogs" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Dogs</a>
              <a href="/cats" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Cats</a>
              <a href="/horses" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Horses</a>
              <a href="/goats" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Goats</a>
              <a href="/rabbits" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Rabbits</a>
              <a href="/sheep" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sheep</a>
            </div>
          </div>
        </div>
        <div class="relative group">
          <button class="text-gray-700 hover:text-primary font-medium">
            Workflows ▾
          </button>
          <div class="absolute left-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-1">
              <a href="/workflows/breeding-cycles" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Breeding Cycles</a>
              <a href="/workflows/breeding-intelligence" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Breeding Intelligence</a>
              <a href="/workflows/heat-tracking" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Heat Tracking</a>
              <a href="/workflows/breeding-plans" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Breeding Plans</a>
              <a href="/workflows/whelping" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Whelping</a>
              <a href="/workflows/pedigrees" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Pedigrees</a>
              <a href="/workflows/genetics-and-health-testing" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Genetics & Health</a>
              <a href="/workflows/waitlists-and-placement" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Waitlists & Placement</a>
              <a href="/workflows/client-management" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Client Management</a>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex items-center space-x-4">
        <a
          href="/coming-soon"
          class="bg-primary text-white px-6 py-2 rounded-lg hover:opacity-90 font-medium"
        >
          Get Early Access
        </a>
      </div>
    </div>
  </nav>
</header>
