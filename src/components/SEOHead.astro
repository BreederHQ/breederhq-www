---
/**
 * SEO Head Component
 * Comprehensive meta tags, structured data, and SEO optimization
 */

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  canonicalURL?: string;
  noindex?: boolean;
  keywords?: string[];
}

const {
  title,
  description,
  ogImage = '/og-default.jpg',
  ogType = 'website',
  canonicalURL,
  noindex = false,
  keywords = [],
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.breederhq.com';
const currentURL = canonicalURL || new URL(Astro.url.pathname, siteUrl).href;
const fullOgImage = new URL(ogImage, siteUrl).href;

// Default keywords
const defaultKeywords = [
  'breeding management software',
  'breeder management system',
  'breeding program software',
  'animal breeding software',
];
const allKeywords = [...defaultKeywords, ...keywords];

// Structured Data - Organization
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "BreederHQ",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "description": description,
  "url": siteUrl,
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "ratingCount": "127"
  }
};
---

<!-- Primary Meta Tags -->
<meta name="title" content={title} />
<meta name="description" content={description} />
{keywords.length > 0 && <meta name="keywords" content={allKeywords.join(', ')} />}
<link rel="canonical" href={currentURL} />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={currentURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullOgImage} />
<meta property="og:site_name" content="BreederHQ" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={currentURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={fullOgImage} />

<!-- Additional SEO -->
<meta name="author" content="BreederHQ" />
<meta name="theme-color" content="#2563eb" />

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />

<!-- Preconnect to important domains -->
<link rel="preconnect" href="https://www.googletagmanager.com" />
<link rel="preconnect" href="https://www.google-analytics.com" />
<link rel="dns-prefetch" href="https://connect.facebook.net" />
<link rel="dns-prefetch" href="https://snap.licdn.com" />
